package main;

public class CuentaAtras {

	public static void main(String[] args) {
		
		atras(10, 1);
	}
	
	public static Integer atras(int numSegundos, int intervaloSegundos ) {
		
		int haciaAtras =0;
		
		do {
			 haciaAtras = (numSegundos) - intervaloSegundos;
			 haciaAtras--;
			   try {
		            //Ponemos a "Dormir" el programa durante los ms que queremos
		            Thread.sleep(1*1000);
		         } catch (Exception e) {
		            System.out.println(e);
		         }
			   System.out.println(haciaAtras);
			
		} while (haciaAtras>=0);
		
		
		return intervaloSegundos;
		
	}


}
